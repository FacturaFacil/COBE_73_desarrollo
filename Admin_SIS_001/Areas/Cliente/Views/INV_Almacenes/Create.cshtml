@model Admin.Models.INV.ViewModels.VM_INV_ALMACENES
@{
    ViewData["Title"] = "Registrar Almacén";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Registar Almacén</h5>
                </div>
                <div class="ibox-content">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="col-6 offset-3 mt-4">
                        <div class="form-group">
                            <label asp-for="Almacen.Id_Sucursal">Sucursal</label>
                            @Html.DropDownListFor(m => m.Almacen.Id_Sucursal, Model.ListaSucursales,
                     "-Porfavor seleccione una sucursal-", new { @class = "form-control" })
                            <span asp-validation-for="Almacen.Id_Sucursal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Almacen.Id">Clave</label>
                            @{ if (ViewBag.Folio != null)
                                {
                                    <input asp-for="Almacen.Id" class="form-control" value="@ViewBag.Folio" id="txtId" />
                                }
                                else
                                {
                                    <input asp-for="Almacen.Id" class="form-control" />
                                }}

                        </div>
                        <div class="form-group">
                            <label asp-for="Almacen.Descripcion">Descripcion</label>
                            <input asp-for="Almacen.Descripcion" class="form-control" />
                            <span asp-validation-for="Almacen.Descripcion" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-6 offset-3 mt-4">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <label asp-for="Almacen.Activo">Activo</label>
                                    <div class="switch">
                                        <div class="onoffswitch">
                                            <input type="checkbox" asp-for="Almacen.Activo" checked="" class="onoffswitch-checkbox" id="cbActivo">
                                            <label class="onoffswitch-label" for="cbActivo">
                                                <span class="onoffswitch-inner"></span>
                                                <span class="onoffswitch-switch"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Almacen.Activo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <label asp-for="Almacen.Predeterminado">Predeterminado</label>
                                    <div class="switch">
                                        <div class="onoffswitch">
                                            <input type="checkbox" asp-for="Almacen.Predeterminado" checked="" class="onoffswitch-checkbox" id="cbPredeterminado">
                                            <label class="onoffswitch-label" for="cbPredeterminado">
                                                <span class="onoffswitch-inner"></span>
                                                <span class="onoffswitch-switch"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Almacen.Predeterminado" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <partial name="_Botones" view-data='@new ViewDataDictionary(ViewData) { { "data", "Create" } }' />
                    </div>
                   
                </div>


                <div class="col-12">
                    
                </div>
            </div>

        </div>

    </div>

</form>

@section Scripts{

    <script src="~/js/INV/almacenes.js"></script>




}

