<section class="container">
    @if (ViewBag.ErrorTitulo == null)
    {
        <div class="middle-box text-center animated fadeInDown">
            <h1>404</h1>
            <h3 class="font-bold">Pagina no encontrada</h3>

            <div class="error-desc">

                <form class="form-inline m-t" role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search for page">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="middle-box text-center animated fadeInDown">
            <h1>404</h1>
            <h3 class="font-bold">@ViewBag.ErrorTitulo</h3>

            <div class="error-desc">
                @ViewBag.ErrorMensaje
                <div class="row">
                <div class="col-md-6">
                    <a class="btn btn-info btn-block btn-3d" href="../index"> Continuar...</a>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-success btn-block btn-3d" onclick="history.back();">Regresar al pagina anterior...</button>
                </div>
            </div>
            </div>
        </div>
    }





